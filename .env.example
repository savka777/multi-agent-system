# Copy this file to .env and fill in your values

# Anthropic API Key (required)
ANTHROPIC_API_KEY=sk-ant-...

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Job Configuration
JOB_TIMEOUT=600  # 10 minutes
RESULT_TTL=86400  # 24 hours

# API Configuration
ALLOWED_ORIGINS=*  # Comma-separated list, use * for development only
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO
